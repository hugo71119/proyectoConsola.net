@page
@model appWebcshtml.Pages.IndexModel
@{
    ViewData["Title"] = "Proyecto Primer Bimestre";
    double pi = Math.PI;
    double semiejeMenor = 5;
    double semiejeMayor = 6;
    double altura = 3;
    double perimetro = Math.Round(pi * (semiejeMenor + semiejeMayor), 2);
    double area = Math.Round((pi * semiejeMenor * semiejeMayor), 2);
    double volumen = Math.Round((area * altura), 2);
    string url = "https://i.ibb.co/jW4t35t/formulas-PISE1.png";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body class="bg-dark">
    <div class="container mt-5">
        <h1 class="text-center text-white">Proyecto Web - Ingeniería de Software</h1>

        <div class="row mt-4 text-white">
            <div class="col-md-6 d-flex justify-content-center">
                <img src=@(url) alt="Elipse" class="img-fluid rounded" />
            </div>

            <div class="col-md-6">
                <div class="d-flex flex-column justify-content-center h-100">
                    <p class="fs-5">
                        <span class="fw-bold">Perímetro:</span> Una elipse con semieje menor (a) de @(semiejeMenor)cm y semieje mayor (b) de @(semiejeMayor)cm tiene un perímetro aproximado de <span class="fw-bold">@(perimetro)cm</span>.
                    </p>
                    <p class="fs-5">
                        <span class="fw-bold">Área:</span> El área de la misma elipse es de aproximadamente <span class="fw-bold">@(area)cm2</span>.
                    </p>

                    <p class="fs-5">
                        <span class="fw-bold">Volumen:</span> El volumen de la misma elipse es de aproximadamente <span class="fw-bold">@(volumen)cm3</span>.
                    </p>
                </div>
            </div>
        </div>

        <footer class="text-center mt-5">
            <p class="text-white">Proyecto de Ingeniería de Software - Primer Bimestre</p>
        </footer>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
